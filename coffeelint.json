{
  "max_line_length": {
    "value": 120,
    "level": "error",
    "limitComments": true
  },

  "ensure_comprehensions": {
    "level": "warn"
  },

  "no_unnecessary_double_quotes": {
    "level": "error"
  },

  "spacing_after_comma": {
    "level": "error"
  },

  "arrow_spacing": {
    "level": "error"
  },

  "no_empty_param_list": {
    "level": "error"
  },

  "no_unnecessary_fat_arrows": {
    "level": "error"
  },

  "prefer_english_operator": {
    "level": "error"
  },

  "no_plusplus": {
    "level": "error"
  },

  "no_interpolation_in_single_quotes": {
    "level": "error"
  },

  "colon_assignment_spacing": {
    "spacing" : {
      "left": 0,
      "right": 1
    },
    "level": "error"
  },

  "no_debugger": {
    "console": true,
    "level": "error"
  },

  "eol_last": {
    "level": "error"
  }
}
